<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/imageView3"
        android:layout_gravity="left|top"
        android:src="@drawable/app2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/app3"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/imageView5"
        android:layout_gravity="right|top"
        android:src="@drawable/app4"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/imageView6"
        android:src="@drawable/app5"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/imageView7"
        android:src="@drawable/app6"
        android:layout_gravity="center"
        android:background="@color/White"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/imageView8"
        android:src="@drawable/app7"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/imageView9"
        android:src="@drawable/app8"
        android:layout_gravity="left|bottom"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/imageView10"
        android:src="@drawable/app9"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/imageView11"
        android:layout_gravity="right|bottom"
        android:layout_below="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView4" />


</RelativeLayout>